---
// src/layouts/Layout.astro
export interface Props {
  title: string;
  description: string;
  canonicalURL: string;
}

const { title, description, canonicalURL } = Astro.props;
const googleAnalyticsId = 'G-GPHNTYTXYB'; // Replace with your actual GA4 tracking ID
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="canonical" href={canonicalURL}>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    
    <!-- Google Analytics -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${googleAnalyticsId}`}></script>
    <script define:vars={{ googleAnalyticsId }}>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', googleAnalyticsId);
    </script>
    
    <!-- You can add other common head elements here -->
</head>
<body>
    <slot />
</body>
</html>